/* finding of minimum and maximum */

SELECT MIN(quantitymaster.minqty), quantitymaster.maxqty, MAX(pricemaster.price) FROM quantitymaster 
JOIN pricemaster ON pricemaster.qid = quantitymaster.qid GROUP BY maxqty LIMIT 1;

SELECT MAX(quantitymaster.minqty), quantitymaster.maxqty, MIN(pricemaster.price) FROM quantitymaster 
JOIN pricemaster ON pricemaster.qid = quantitymaster.qid GROUP BY maxqty LIMIT 1;
